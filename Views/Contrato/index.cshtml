@model IEnumerable<inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
}

<div class="container mt-5">
    <h2 class="mb-4">Listado de Contratos</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Fecha de inicio</th>
                    <th>Fecha de final</th>
                    <th>Monto</th>
                    <th>Inmueble</th>
                    <th>Inquilino</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contrato in Model)
                {
                    <tr>
                        <td>@contrato.id_contrato</td>
                        <td>@contrato.fechaInicio_contrato</td>
                        <td>@contrato.fechaFin_contrato</td>
                        <td>$@contrato.monto_contrato</td>
                        <td>@contrato.idInmueble</td>
                        <td>@contrato.idInquilino</td>
                        <td>
                            <a class="btn btn-sm btn-info me-1" asp-action="Details"
                                asp-route-id="@contrato.id_contrato">Ver</a>
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit"
                                asp-route-id="@contrato.id_contrato">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete"
                                asp-route-id="@contrato.id_contrato">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a class="btn btn-success" asp-action="Create">Agregar Nuevo Contrato</a>
    </div>
</div>