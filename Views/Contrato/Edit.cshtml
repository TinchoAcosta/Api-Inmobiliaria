@model inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Editar un Contrato";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 mx-auto" style="max-width: 600px;">
        <div class="text-center mb-4">
            <i class="bi bi-file-earmark-text display-3 text-purple"></i>
            <h3 class="fw-bold text-purple mt-2">Modificaci√≥n de Contratos</h3>
            <p class="text-muted">Actualice los datos del contrato</p>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="id_contrato" />
            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="mb-3">
                <label asp-for="fechaInicio_contrato" class="form-label fw-semibold text-purple">Fecha de
                    Inicio:</label>
                <input type="date" asp-for="fechaInicio_contrato" class="form-control rounded-3 shadow-sm">
                <span asp-validation-for="fechaInicio_contrato" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="fechaFin_contrato" class="form-label fw-semibold text-purple">Fecha de Fin:</label>
                <input type="date" asp-for="fechaFin_contrato" class="form-control rounded-3 shadow-sm">
                <span asp-validation-for="fechaFin_contrato" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="monto_contrato" class="form-label fw-semibold text-purple">Monto:</label>
                <input type="text" asp-for="monto_contrato" class="form-control rounded-3 shadow-sm">
                <span asp-validation-for="monto_contrato" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="idInquilino" class="form-label fw-semibold text-purple">Inquilino:</label>
                <select asp-for="idInquilino" class="form-select rounded-3 shadow-sm">
                    <option value="">Seleccione un inquilino</option>
                    @foreach (var p in ViewBag.inquilinos)
                    {
                        if (p != null)
                        {
                            <option value="@p.id_inquilino">@p.nombre_inquilino @p.apellido_inquilino</option>
                        }
                    }
                </select>
                <span asp-validation-for="idInquilino" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="idInmueble" class="form-label fw-semibold text-purple">Inmueble:</label>
                <select asp-for="idInmueble" class="form-select rounded-3 shadow-sm">
                    <option value="">Seleccione el inmueble</option>
                    @foreach (var t in ViewBag.inmuebles)
                    {
                        <option value="@t.id_inmueble">@t.direccion_inmueble</option>
                    }
                </select>
                <span asp-validation-for="idInmueble" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>