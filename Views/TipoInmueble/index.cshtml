@model IEnumerable<inmobiliaria.Models.TipoInmueble>

@{
    ViewData["Title"] = "Tipos de Inmueble";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 mx-auto" style="max-width: 900px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-purple">Tipos de Inmueble</h2>
            <a asp-action="Create" class="btn btn-gradient-success fw-semibold rounded-3 px-4">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Tipo
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info rounded-3 shadow-sm">
                No hay tipos de inmuebles registrados todavía.
            </div>
        }
        else
        {
            <table class="table table-hover shadow-sm rounded-3">
                <thead class="bg-light-purple">
                    <tr>
                        <th class="text-purple">#</th>
                        <th class="text-purple">Descripción</th>
                        <th class="text-end text-purple">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipo in Model)
                    {
                        <tr>
                            <td>@tipo.id</td>
                            <td>@tipo.descripcion</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@tipo.id" class="btn btn-sm btn-info me-2 rounded-3">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <form asp-action="DeleteConfirmed" asp-route-id="@tipo.id" method="post" class="d-inline"
                                    onsubmit="return confirm('¿Seguro que desea eliminar este tipo de inmueble?');">
                                    <button type="submit" class="btn btn-sm btn-danger rounded-3">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3 rounded-3 shadow-sm">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>