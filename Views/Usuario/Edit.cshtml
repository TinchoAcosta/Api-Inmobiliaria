 @model inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Registrar un Usuario Nuevo";
}
<div class="container mt-5">
    <h2 class="mb-4">Modificación de Usuarios</h2>
    <form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id_usuario" />
    <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="nombre_usuario" class=" form-label">Nombre:</label>
            <input asp-for="nombre_usuario" class="form-control" />
            <span asp-validation-for="nombre_usuario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="apellido_usuario" class="form-label">Apellido:</label>
            <input asp-for="apellido_usuario" class="form-control" />
            <span asp-validation-for="apellido_usuario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="email_usuario" class="form-label">Email:</label>
            <input asp-for="email_usuario" type="email" class="form-control" />
            <span asp-validation-for="email_usuario" class="text-danger"></span>
            <span ></span>
        </div>

        <div class="mb-3">
            <label asp-for="password_usuario" class="form-label">Contraseña:</label>
            <input asp-for="password_usuario" class="form-control" type="password" />
            <span asp-validation-for="password_usuario" class="text-danger"></span>
        </div>
