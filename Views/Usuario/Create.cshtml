        <div class="mb-3">
            <select asp-for="rol_usuario" class="form-control">
                <option value="">Seleccione un rol</option>
                <option value="Administrador">Administrador</option>
                <option value="Empleado">Empleado</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="avatar_form" class="form-label">Avatar:</label>
            <input type="file" asp-for="avatar_form" class="form-control" accept="image/*"/>
            <span asp-validation-for="avatar_form" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>