@model inmobiliaria.Models.LoginView

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-lg rounded-4 border-0 p-4 w-100" style="max-width: 420px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-circle display-3 text-purple"></i>
            <h3 class="fw-bold text-purple mt-2">Iniciar Sesión</h3>
            <p class="text-muted">Accede a tu cuenta para continuar</p>
        </div>

        <form asp-controller="Usuario" asp-action="Login" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 py-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Usuario" class="form-label fw-semibold text-purple"></label>
                <input asp-for="Usuario" class="form-control rounded-3 shadow-sm" placeholder="Correo o usuario" />
                <span asp-validation-for="Usuario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Clave" class="form-label fw-semibold text-purple"></label>
                <input asp-for="Clave" type="password" class="form-control rounded-3 shadow-sm"
                    placeholder="********" />
                <span asp-validation-for="Clave" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-gradient-success btn-lg fw-semibold rounded-3 shadow-sm">
                    Entrar
                </button>
            </div>
        </form>
    </div>
</div>