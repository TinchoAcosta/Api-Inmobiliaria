@model IEnumerable<inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-5">
    <h2 class="mb-4 text-purple fw-bold">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle shadow-sm rounded-3 bg-white">
            <thead class="bg-light-purple text-purple">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Avatar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.nombre_usuario</td>
                        <td>@u.apellido_usuario</td>
                        <td>@u.email_usuario</td>
                        <td>@u.rol_usuario</td>
                        <td>
                            @if (u.avatar_usuario == null)
                            {
                                <img src="/images/default-avatar.png" alt="Avatar por defecto" class="img-thumbnail"
                                    style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;">
                            }
                            else
                            {
                                <img src="@u.avatar_usuario" alt="Avatar de @u.nombre_usuario" class="img-thumbnail"
                                    style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;">
                            }

                        </td>
                        <td>
                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-controller="Usuario"
                                asp-route-id="@u.id_usuario">Ver</a>
                            <a class=" btn btn-sm btn-warning me-1" asp-action="Edit" asp-controller="Usuario"
                                asp-route-id="@u.id_usuario">Editar
                            </a>
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                data-bs-target="#deleteModal" data-id="@u.id_usuario"
                                data-nombre="@u.nombre_usuario @u.apellido_usuario">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a class="btn btn-gradient-success fw-semibold" asp-action="Create">Agregar Nuevo Usuario</a>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header border-0">
                <h5 class="modal-title text-purple fw-bold" id="deleteModalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Seguro que deseas eliminar al usuario <strong id="usuarioNombre"></strong>?
            </div>
            <div class="modal-footer border-0">
                <form id="deleteForm" method="post" asp-action="DeleteConfirmed" asp-controller="Propietario">
                    <input type="hidden" name="id" id="deleteId" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var nombre = button.getAttribute('data-nombre');

            var inputId = deleteModal.querySelector('#deleteId');
            var nombreSpan = deleteModal.querySelector('#usuarioNombre');
            inputId.value = id;
            nombreSpan.textContent = nombre;
            var form = deleteModal.querySelector('#deleteForm');
            form.action = '/Usuario/DeleteConfirmed';
        });
    </script>
}