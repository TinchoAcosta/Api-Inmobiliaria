@model inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5">

                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.avatar_usuario))
                        {
                            <img src="@Model.avatar_usuario" alt="Avatar de @Model.nombre_usuario"
                                class="rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="/images/default-avatar.png" alt="Avatar por defecto" class="img-thumbnail"
                                style="width: 150px; height: 150px; object-fit: cover;"">
                        }
                    </div>
                    <h3 class=" fw-bold text-purple">@Model.nombre_usuario @Model.apellido_usuario</h3>
                        <p class="text-muted mb-4">@Model.rol_usuario</p>
                        <div class="text-start">
                            <p><i class="bi bi-envelope-fill me-2 text-purple"></i><strong>Email:</strong>
                                @Model.email_usuario</p>
                        </div>

                        <div class="mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.id_usuario"
                                class="btn btn-gradient-success fw-semibold px-4">
                                <i class="bi bi-pencil-square me-1"></i> Editar Perfil
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>