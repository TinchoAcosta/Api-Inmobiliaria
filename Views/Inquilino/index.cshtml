@model IEnumerable<inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}

<div class="container mt-5">
    <h2 class="mb-4 text-purple fw-bold">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle shadow-sm rounded-3 bg-white">
            <thead class="bg-light-purple text-purple">
                <tr>
                    <th>Id</th>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Tel√©fono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.id_inquilino</td>
                        <td>@i.dni_inquilino</td>
                        <td>@i.nombre_inquilino</td>
                        <td>@i.apellido_inquilino</td>
                        <td>@i.email_inquilino</td>
                        <td>@i.telefono_inquilino</td>
                        <td>
                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@i.id_inquilino">Ver</a>
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit"
                                asp-route-id="@i.id_inquilino">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@i.id_inquilino">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a class="btn btn-gradient-success fw-semibold" asp-action="Create">Agregar Nuevo Inquilino</a>
    </div>
</div>
