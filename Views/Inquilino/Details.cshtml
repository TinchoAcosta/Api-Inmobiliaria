@model inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Detalle del Inquilino";
}

<div class="container mt-5">
    <h2 class="mb-5 text-purple fw-bold text-center">Detalle del Inquilino</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-4 h-100 border-0">
                <h5 class="card-title text-purple fw-bold mb-3">Información Personal</h5>
                <div class="mb-2">
                    <strong>ID:</strong> @Model.id_inquilino
                </div>
                <div class="mb-2">
                    <strong>DNI:</strong> @Model.dni_inquilino
                </div>
                <div class="mb-2">
                    <strong>Nombre:</strong> @Model.nombre_inquilino
                </div>
                <div class="mb-2">
                    <strong>Apellido:</strong> @Model.apellido_inquilino
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-4 h-100 border-0">
                <h5 class="card-title text-purple fw-bold mb-3">Contacto</h5>
                <div class="mb-2">
                    <strong>Email:</strong> @Model.email_inquilino
                </div>
                <div class="mb-2">
                    <strong>Teléfono:</strong> @Model.telefono_inquilino
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-gradient-success fw-semibold px-4">Volver al Listado</a>
    </div>
</div>
