@model inmobiliaria.Models.Propietario

@{
    ViewData["Title"] = "Editar un propietario";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 mx-auto" style="max-width: 600px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-badge-fill display-3 text-purple"></i>
            <h3 class="fw-bold text-purple mt-2">Edición de Propietarios</h3>
            <p class="text-muted">Actualice la información del propietario</p>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="id_propietario" />

            <div class="mb-3">
                <label asp-for="dni_propietario" class="form-label fw-semibold text-purple">DNI</label>
                <input asp-for="dni_propietario" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="dni_propietario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="nombre_propietario" class="form-label fw-semibold text-purple">Nombre</label>
                <input asp-for="nombre_propietario" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="nombre_propietario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="apellido_propietario" class="form-label fw-semibold text-purple">Apellido</label>
                <input asp-for="apellido_propietario" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="apellido_propietario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="email_propietario" class="form-label fw-semibold text-purple">Email</label>
                <input asp-for="email_propietario" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="email_propietario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="telefono_propietario" class="form-label fw-semibold text-purple">Teléfono</label>
                <input asp-for="telefono_propietario" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="telefono_propietario" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3 small">
                <strong>Se encontraron errores:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>