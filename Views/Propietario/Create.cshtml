@model inmobiliaria.Models.Propietario

@{
    ViewData["Title"] = "Agregar un propietario";
}

<div class="container mt-5">
    <h2 class="mb-4">Alta de Propietarios</h2>

     <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="dni_propietario" class="form-label">DNI</label>
            <input asp-for="dni_propietario" class="form-control" />
            <span asp-validation-for="dni_propietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="nombre_propietario" class="form-label">Nombre</label>
            <input asp-for="nombre_propietario" class="form-control" />
            <span asp-validation-for="nombre_propietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="apellido_propietario" class="form-label">Apellido</label>
            <input asp-for="apellido_propietario" class="form-control" />
            <span asp-validation-for="apellido_propietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="email_propietario" class="form-label">Email</label>
            <input asp-for="email_propietario" class="form-control" />
            <span asp-validation-for="email_propietario" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="telefono_propietario" class="form-label">Tel√©fono</label>
            <input asp-for="telefono_propietario" class="form-control" />
            <span asp-validation-for="telefono_propietario" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
    @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Se encontraron errores:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
</div>