@model IEnumerable<inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Listado de Pago";
}

<div class="container mt-5">
    <h2 class="mb-4 text-purple fw-bold">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <div class="mb-10">
            <div class="mb-3">
                <select id="contratoSelect" class="form-control">
                    <option value="">Seleccione un contrato</option>
                    @foreach (var c in ViewBag.contratos)
                    {
                        if (c != null)
                        {
                            <option value="@c.id_contrato">@c.Inmueble.direccion_inmueble - @c.Inquilino.nombre_inquilino (@c.fechaInicio_contrato.ToString("dd/MM/yyyy") | @c.fechaFin_contrato.ToString("dd/MM/yyyy"))</option>
                        }
                    }
                </select>

            </div>
        </div>
        <table class="table table-hover table-striped align-middle shadow-sm rounded-3 bg-white">
            <thead class="bg-light-purple text-purple">
                <tr>
                    <th>Numero Pago</th>
                    <th>Detalle Pago</th>
                    <th>Fecha de Pago</th>
                    <th>Monto de Pago</th>
                    <th>Estado de Pago</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in Model)
                {
                    <tr>
                        <td>@pago.numero_pago</td>
                        <td>@pago.detalle_pago</td>
                        <td>@pago.fecha_de_pago.ToString("dd/MM/yyyy")</td>
                        <td>@pago.monto_pago</td>
                        <td>
                            @if (pago.esta_anulado == false)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Anulado</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@pago.id_pago">Ver</a>
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@pago.id_pago">Editar</a>
                             <a class="btn btn-sm btn-warning me-1" asp-action="AnularPago" asp-route-id="@pago.id_pago">Anular</a>
                            @if(User.IsInRole("Administrador"))
                            {
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@pago.id_pago"
                                    data-nombre="Pago #@pago.id_pago">
                                    Eliminar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a class="btn btn-gradient-success fw-semibold" asp-action="Create">Agregar Nuevo Pago</a>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header border-0">
                <h5 class="modal-title text-purple fw-bold" id="deleteModalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Seguro que deseas eliminar al pago <strong id="pagoNombre"></strong>?
            </div>
            <div class="modal-footer border-0">
                <form id="deleteForm" method="post" asp-action="DeleteConfirmed" asp-controller="Pago">
                    <input type="hidden" name="id" id="deleteId" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("contratoSelect").addEventListener("change", function () {
            var contratoId = this.value;
            if (contratoId) {
                window.location.href = '/Pago/FiltrarPorContrato?contratoId=' + contratoId;
            } else {
                window.location.href = '/Pago/Index';

            }
        });
    </script>
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var nombre = button.getAttribute('data-nombre');

            var inputId = deleteModal.querySelector('#deleteId');
            var nombreSpan = deleteModal.querySelector('#pagoNombre');
            inputId.value = id;
            nombreSpan.textContent = nombre;
            var form = deleteModal.querySelector('#deleteForm');
            form.action = '/Pago/DeleteConfirmed';
        });
    </script>
}
