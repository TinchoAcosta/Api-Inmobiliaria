@using inmobiliaria.Models
@model inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar un Pago";
}

<div class="container mt-5">
    <h2 class="mb-4 text-purple fw-bold">Editar un Pago</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-white">
        <input type="hidden" asp-for="id_pago" />
        <div class="mb-3">
            <label class="form-label fw-semibold">NÃºmero de Pago</label>
            <p class="form-control-plaintext">@Model.numero_pago</p>
        </div>

        <div class="mb-3">
            <label asp-for="detalle_pago" class="form-label fw-semibold">Detalle</label>
            <input asp-for="detalle_pago" class="form-control" />
            <span asp-validation-for="detalle_pago" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Fecha de Pago</label>
            <p class="form-control-plaintext">@Model.fecha_de_pago.ToString("dd/MM/yyyy")</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Monto</label>
            <p class="form-control-plaintext">$@Model.monto_pago</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Contrato</label>
            <p class="form-control-plaintext">
                @Model.Contrato.fechaInicio_contrato.ToString("dd/MM/yyyy") -
                @Model.Contrato.fechaFin_contrato.ToString("dd/MM/yyyy")
            </p>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-gradient-success fw-semibold">Guardar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>