@model inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Registrar un pago";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 mx-auto" style="max-width: 600px;">
        <div class="text-center mb-4">
            <i class="bi bi-cash-stack display-3 text-purple"></i>
            <h3 class="fw-bold text-purple mt-2">Alta de Pagos</h3>
            <p class="text-muted">Complete los datos para registrar un nuevo pago</p>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="mb-3">
                <label asp-for="numero_pago" class="form-label fw-semibold text-purple">NÃºmero del pago</label>
                <input asp-for="numero_pago" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="numero_pago" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="detalle_pago" class="form-label fw-semibold text-purple">Detalle</label>
                <input asp-for="detalle_pago" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="detalle_pago" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="fecha_de_pago" class="form-label fw-semibold text-purple">Fecha</label>
                <input asp-for="fecha_de_pago" type="date" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="fecha_de_pago" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="monto_pago" class="form-label fw-semibold text-purple">Monto</label>
                <input asp-for="monto_pago" class="form-control rounded-3 shadow-sm" />
                <span asp-validation-for="monto_pago" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="contratoId" class="form-label fw-semibold text-purple">Contrato:</label>
                <select asp-for="contratoId" class="form-control rounded-3 shadow-sm">
                    <option value="">Seleccione un contrato</option>
                    @foreach (var c in ViewBag.contratos)
                    {
                        if (c != null)
                        {
                            <option value="@c.id_contrato">@c.Inmueble.direccion_inmueble - @c.Inquilino.nombre_inquilino
                                (@c.fechaInicio_contrato.ToString("dd/MM/yyyy") | @c.fechaFin_contrato.ToString("dd/MM/yyyy"))
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="contratoId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>