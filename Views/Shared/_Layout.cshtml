<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Casita Propiedades</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvc_inmobiliaria.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="site-header fixed-top py-2 shadow-sm">
            <div class="container d-flex flex-md-row align-items-center justify-content-between">
                <a class="fw-bold text-purple text-decoration-none" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-1"></i> Casita
                </a>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex gap-3">
                        <a class="btn btn-gradient-success fw-semibold px-3" asp-controller="Usuario" asp-action="Login">
                            Acceder
                        </a>
                    </div>
                }
                else
                {
                    <ul class="navbar-nav flex-row gap-3">
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-purple fw-semibold" asp-controller="Usuario" asp-action="Index">
                                    <i class="bi bi-people-fill me-1"></i> Usuarios
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-purple fw-semibold" asp-controller="Propietario" asp-action="Index">
                                Propietarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple fw-semibold" asp-controller="Inmueble" asp-action="Index">
                                Inmuebles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple fw-semibold" asp-controller="Inquilino" asp-action="Index">
                                Inquilinos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple fw-semibold" asp-controller="Contrato" asp-action="Index">
                                Contratos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple fw-semibold" asp-controller="Pago" asp-action="Index">
                                Pagos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Usuario"
                                asp-action="ModificarPerfil">
                                @if (!string.IsNullOrEmpty(User.FindFirst("Avatar")?.Value))
                                {
                                    <img src="@User.FindFirst("Avatar")?.Value" alt="Avatar" class="rounded-circle me-2"
                                        style="width: 30px; height: 30px; object-fit: cover;" />
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Usuario" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-purple fw-semibold">
                                    Cerrar sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main class="flex-grow-1 container py-5 mt-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white shadow-sm rounded-top py-3 mt-auto">
        <div class="container d-flex justify-content-center gap-4 small">
            <a href="https://github.com/TinchoAcosta" target="_blank" class="text-purple text-decoration-none">
                <i class="bi bi-github me-1"></i> Martin Acosta
            </a>
            <a href="https://github.com/tadeowoto" target="_blank" class="text-purple text-decoration-none">
                <i class="bi bi-github me-1"></i> Tadeo Wotoszyn
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>