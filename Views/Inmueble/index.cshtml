@model IEnumerable<inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-purple fw-bold">@ViewData["Title"]</h2>
        <a class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Agregar Inmueble
        </a>
    </div>

    <div class="d-flex gap-2 mb-3">
        <a asp-action="InmueblesNoDisponibles" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm">
            <i class="bi bi-eye-slash"></i> No Disponibles
        </a>
        <a asp-action="FiltrarInmuebles" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm">
            <i class="bi bi-search"></i> Buscar por Fechas
        </a>
        <a class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm" asp-controller="TipoInmueble"
            asp-action="Index">
            <i class="bi bi-tags"></i> Tipos
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover table-striped align-middle mb-0 bg-white">
            <thead class="bg-light-purple text-purple">
                <tr>
                    <th>Dirección</th>
                    <th>Ambientes</th>
                    <th>Superficie</th>
                    <th>Dueño</th>
                    <th>Tipo</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inmueble in Model)
                {
                    <tr>
                        <td>@inmueble.direccion_inmueble</td>
                        <td>@inmueble.ambientes_inmueble</td>
                        <td>@inmueble.superficie_inmueble m²</td>
                        <td>@(inmueble.propietario_inmueble?.nombre_propietario ?? "Sin dueño")</td>
                        <td>@inmueble.tipoInmueble?.descripcion</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-info text-white shadow-sm me-1" asp-action="Details"
                                asp-route-id="@inmueble.id_inmueble">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a class="btn btn-sm btn-warning text-white shadow-sm me-1" asp-action="Edit"
                                asp-route-id="@inmueble.id_inmueble">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-secondary text-white shadow-sm me-1" asp-action="DarDeBaja"
                                asp-route-id="@inmueble.id_inmueble">
                                <i class="bi bi-slash-circle"></i> Baja
                            </a>

                            @if (User.IsInRole("Administrador"))
                            {
                                <button type="button" class="btn btn-sm btn-danger shadow-sm" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@inmueble.id_inmueble"
                                    data-nombre="@inmueble.direccion_inmueble">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header border-0">
                <h5 class="modal-title text-purple fw-bold" id="deleteModalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Seguro que deseas eliminar el inmueble <strong id="inmuebleNombre"></strong>?
            </div>
            <div class="modal-footer border-0">
                <form id="deleteForm" method="post" asp-action="DeleteConfirmed" asp-controller="Inmueble">
                    <input type="hidden" name="id" id="deleteId" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-outline-secondary rounded-3"
                        data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger rounded-3">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var nombre = button.getAttribute('data-nombre');

            var inputId = deleteModal.querySelector('#deleteId');
            var nombreSpan = deleteModal.querySelector('#inmuebleNombre');
            inputId.value = id;
            nombreSpan.textContent = nombre;
        });
    </script>
}