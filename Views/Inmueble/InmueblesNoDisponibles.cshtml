@model IEnumerable<inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles No Disponibles";
}

<div class="container mt-5">
    <h2 class="mb-4 text-purple fw-bold">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <div>
            <a asp-action="Index">
                <button class="btn btn-outline-secondary mb-3">Ver Inmuebles Disponibles</button>
            </a>
        </div>
        <table class="table table-hover table-striped align-middle shadow-sm rounded-3 bg-white">
            <thead class="bg-light-purple text-purple">
                <tr>
                    <th>Dirección</th>
                    <th>Ambientes</th>
                    <th>Superficie</th>
                    <th>Dueño</th>
                    <th>
                        Tipo
                        <a class="btn btn-gradient-success fw-semibold" asp-controller="TipoInmueble"
                            asp-action="Index">Mas</a>
                    </th>
                    <th>Portada</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inmueble in Model)
                {
                    <tr>
                        <td>@inmueble.direccion_inmueble</td>
                        <td>@inmueble.ambientes_inmueble</td>
                        <td>@inmueble.superficie_inmueble m²</td>
                        <td>@(inmueble.propietario_inmueble?.nombre_propietario ?? "Sin dueño")</td>
                        <td>@inmueble.tipoInmueble?.descripcion</td>
                        <td>
                            @if (!string.IsNullOrEmpty(inmueble.portada_inmueble))
                            {
                                <img src="~/images/@inmueble.portada_inmueble" alt="Portada" class="img-thumbnail"
                                    style="width:80px;height:auto;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info me-1" asp-action="Details"
                                asp-route-id="@inmueble.id_inmueble">Ver</a>
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit"
                                asp-route-id="@inmueble.id_inmueble">Editar</a>
                            <a class="btn btn-sm btn-warning me-3" asp-action="DarDeAlta"
                                asp-route-id="@inmueble.id_inmueble">Dar de alta</a>

                            @if (User.IsInRole("Administrador"))
                            {
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@inmueble.id_inmueble"
                                    data-nombre="@inmueble.direccion_inmueble">
                                    Eliminar
                                </button>
                            }


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>