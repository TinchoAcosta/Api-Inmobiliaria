@model inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Agregar un Inmueble";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 mx-auto" style="max-width: 700px;">
        <div class="text-center mb-4">
            <i class="bi bi-building-add display-4 text-purple"></i>
            <h3 class="fw-bold text-purple mt-2">Alta de Inmueble</h3>
            <p class="text-muted">Complete los datos para registrar un nuevo inmueble</p>
        </div>

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="direccion_inmueble" class="form-label fw-semibold text-purple">Dirección</label>
                <input type="text" asp-for="direccion_inmueble" class="form-control rounded-3 shadow-sm"
                    placeholder="Ej: Av. Siempre Viva 123">
                <span asp-validation-for="direccion_inmueble" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ambientes_inmueble" class="form-label fw-semibold text-purple">Ambientes</label>
                    <input type="number" asp-for="ambientes_inmueble" class="form-control rounded-3 shadow-sm" min="1"
                        placeholder="Ej: 3">
                    <span asp-validation-for="ambientes_inmueble" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="superficie_inmueble" class="form-label fw-semibold text-purple">Superficie
                        (m²)</label>
                    <input type="number" asp-for="superficie_inmueble" class="form-control rounded-3 shadow-sm"
                        placeholder="Ej: 120">
                    <span asp-validation-for="superficie_inmueble" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="lat_inmueble" class="form-label fw-semibold text-purple">Latitud</label>
                    <input type="text" asp-for="lat_inmueble" class="form-control rounded-3 shadow-sm"
                        placeholder="-34.6037">
                    <span asp-validation-for="lat_inmueble" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="long_inmueble" class="form-label fw-semibold text-purple">Longitud</label>
                    <input type="text" asp-for="long_inmueble" class="form-control rounded-3 shadow-sm"
                        placeholder="-58.3816">
                    <span asp-validation-for="long_inmueble" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="PropietarioId" class="form-label fw-semibold text-purple">Propietario</label>
                <select asp-for="PropietarioId" class="form-select rounded-3 shadow-sm">
                    <option value="">Seleccione un propietario</option>
                    @foreach (var p in ViewBag.propietarios)
                    {
                        if (p != null)
                        {
                            <option value="@p.id_propietario">@p.nombre_propietario @p.apellido_propietario</option>
                        }
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="tipo_inmueble" class="form-label fw-semibold text-purple">Tipo de Inmueble</label>
                <select asp-for="tipo_inmueble" class="form-select rounded-3 shadow-sm">
                    <option value="">Seleccione un tipo</option>
                    @foreach (var t in ViewBag.tiposInmueble)
                    {
                        <option value="@t.id">@t.descripcion</option>
                    }
                </select>
                <span asp-validation-for="tipo_inmueble" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="uso_inmueble" class="form-label fw-semibold text-purple">Uso</label>
                <select asp-for="uso_inmueble" class="form-select rounded-3 shadow-sm">
                    <option value="">Seleccione un uso</option>
                    <option value="comercial">Comercial</option>
                    <option value="residencial">Residencial</option>
                </select>
                <span asp-validation-for="uso_inmueble" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-purple fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-gradient-success fw-semibold rounded-3 shadow-sm px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3 small">
                <strong>Se encontraron errores:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>